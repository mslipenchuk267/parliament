{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["./screens", "./navigation", "./App.js", "./node_modules/react-native-ble-plx", 
            "./node_modules/react-native-ble-peripheral", ".node_modules/react-native-ble-manager"]
    },
    "plugins": [
        "plugins/markdown",
        "better-docs/component"
    ],
    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "better-docs": {
            "name": "My React components"
        }
    }
  }